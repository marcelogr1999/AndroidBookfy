<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activities.AcaoActivity">


    <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Nome"
        android:textColor="@color/titulosLivros"
        android:textSize="36dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Nome"
        android:textSize="36dp" />

    <Spinner
        android:id="@+id/spinnerSituacao"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:entries="@array/situacao" />

    <Button
        android:id="@+id/btnAcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimaryDark"
        android:text="Acao"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnDeletar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#67706c"
        android:enabled="false"
        android:text="Deletar"
        android:textColor="#FFBCC9C4" />
</LinearLayout>